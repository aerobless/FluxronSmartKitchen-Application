<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_height="100dp"
        android:layout_width="match_parent"
        style="@style/FluxronAppBar"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_marginRight="9dp"
            android:layout_marginLeft="9dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/status_ok_background"
                    android:id="@+id/statusOrb"
                    android:text="@string/unkown_check"
                    style="@style/FluxronDeviceStatusTextView"/>

                <TextView
                    android:id="@+id/deviceStatusName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FLX_GTZ4899"
                    android:layout_toRightOf="@id/statusOrb"
                    style="@style/FluxronDeviceNameTextView"
                    android:layout_marginLeft="9dp"
                    />
                <TextView
                    android:id="@+id/deviceStatusDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="00:FF:DD:33:32:BB"
                    android:layout_toRightOf="@id/statusOrb"
                    android:layout_below="@id/deviceStatusName"
                    style="@style/FluxronDeviceDescTextView"
                    android:layout_marginLeft="9dp"
                    />
            </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/deviceTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FluxronTabLayout"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/deviceViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



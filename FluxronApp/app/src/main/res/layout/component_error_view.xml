<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/errorControl"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/errorCode"
            android:text="@string/error_code_default"
            style="@style/FluxronErrorCode"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/errorDescription"
                style="@style/FluxronErrorDescription"
                android:text="@string/error_text_default"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/errorSince"
                android:text="@string/error_time_default"
                />
        </LinearLayout>
    </LinearLayout>
</merge>
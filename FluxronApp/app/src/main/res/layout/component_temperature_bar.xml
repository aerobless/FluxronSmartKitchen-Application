<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature Zone 1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="220dip"
            android:text="175 °C" />
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="5pt">
            <View android:layout_width="240dip" android:background="@color/currentTemperature" android:layout_height="match_parent"/>
            <View android:layout_width="3dip" android:background="@color/cardview_light_background" android:layout_height="match_parent"/>
            <View android:layout_width="30dip" android:background="@color/idealTemperature" android:layout_height="match_parent" android:id="@+id/middleSegment"/>
            <View android:layout_width="3dip" android:background="@color/cardview_light_background" android:layout_height="match_parent"/>
            <View android:layout_width="wrap_content" android:background="@color/maxTemperature" android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="265dip"
            android:text="195 °C" />
    </LinearLayout>
</merge>
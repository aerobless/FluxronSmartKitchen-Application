<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="9dp">
    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temperatureBars"
                android:orientation="vertical">
                <ch.fluxron.fluxronapp.ui.components.TemperatureBar
                    app:temperatureParamName="@string/F_SCLASS_3028SUB1_KMX_TEMPERATURE_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ch.fluxron.fluxronapp.ui.components.TemperatureBar
                    app:temperatureParamName="@string/F_SCLASS_3028SUB2_KMX_TEMPERATURE_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ch.fluxron.fluxronapp.ui.components.TemperatureBar
                    app:temperatureParamName="@string/F_SCLASS_3028SUB3_KMX_TEMPERATURE_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ch.fluxron.fluxronapp.ui.components.TemperatureBar
                    app:temperatureParamName="@string/F_SCLASS_3028SUB4_KMX_TEMPERATURE_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:useDefaultMargins="true"
                android:columnCount="2"
                android:id="@+id/paramGrid"
                android:rowCount="2">
                <ch.fluxron.fluxronapp.ui.components.ParameterView
                    app:paramName="@string/F_SCLASS_3006SUB3_HEATSINK_LEVEL_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"/>

                <ch.fluxron.fluxronapp.ui.components.ParameterView
                    app:paramName="@string/F_SCLASS_2001SUB6_KWF_TEMP_SETPOINT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0" />

                <ch.fluxron.fluxronapp.ui.components.ParameterView
                    app:paramName="@string/F_SCLASS_2001SUB3_KWF_ACTUAL_POWER_LEVEL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"/>

                <ch.fluxron.fluxronapp.ui.components.ParameterView
                    app:paramName="@string/F_SCLASS_3037SUB2_PAN_TEMPERATURE_GLASS_GRADIENT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
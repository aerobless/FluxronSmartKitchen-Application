<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Window title is disabled because we use a custom title bar -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>

        <!-- Colors -->
        <item name="colorAccent">@color/accentColor1</item>

        <!-- Global styles for controls-->
        <item name="android:textViewStyle">@style/FluxronTextView</item>
    </style>

    <style name="FluxronAppBar" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/primaryColorDark</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="FluxronTextView" parent="android:Widget.TextView">
        <item name="android:foreground">@color/contentForeground</item>
    </style>

    <style name="FluxronTitleTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/titleForeground</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="FluxronDeviceNameTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/titleForeground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FluxronDeviceDescTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/titleForeground</item>
        <item name="android:textSize">15sp</item>
        <item name="android:alpha">0.75</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FluxronDeviceStatusTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/titleForeground</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FluxronSearchBar" parent="android:Widget.TextView">
        <item name="android:textColor">@color/contentBackground</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/searchbox_background</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="FluxronImageButton" parent="android:Widget.ImageButton">
        <item name="android:background">#00000000</item>
    </style>

    <style name="FluxronTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/titleForeground</item>
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FluxronTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/accentColor1</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">@color/primaryColorDark</item>
        <item name="tabTextAppearance">@style/FluxronTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/titleForeground</item>
        <item name="android:background">@color/primaryColorDark</item>
    </style>

</resources>
